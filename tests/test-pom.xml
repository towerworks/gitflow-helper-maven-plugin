<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.towerworks</groupId>
    <artifactId>gitflow-helper-test</artifactId>

    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <!--<packaging>jar</packaging>-->

    <!--<scm>-->
    <!--<url>https://github.com/egineering-llc/gitflow-helper-maven-plugin</url>-->
    <!--<connection>scm:git:https://github.com/egineering-llc/gitflow-helper-maven-plugin.git</connection>-->
    <!--<developerConnection>scm:git:git@https://github.com:egineering-llc/gitflow-helper-maven-plugin.git</developerConnection>-->
    <!--</scm>-->

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <releaseDeploymentRepository>release::default::${repo}/release::false</releaseDeploymentRepository>
        <stageDeploymentRepository>stage::default::${repo}/stage::true</stageDeploymentRepository>
        <snapshotDeploymentRepository>snapshots::default::${repo}/snapshot::true</snapshotDeploymentRepository>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>ch.towerworks</groupId>
                <!--<groupId>com.e-gineering</groupId>-->
                <artifactId>gitflow-helper-maven-plugin</artifactId>
                <version>1.7.1</version>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <id>standard</id>
                        <goals>
                            <goal>enforce-versions</goal>
                            <goal>retarget-deploy</goal>
                            <!--fixme: need to have a git repo to tag-->
                            <!--<goal>tag-master</goal>-->
                            <goal>promote-master</goal>
                            <goal>set-properties</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <gitBranchExpression>${git-branch}</gitBranchExpression>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>git</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>ch.towerworks</groupId>
                        <!--<groupId>com.e-gineering</groupId>-->
                        <artifactId>gitflow-helper-maven-plugin</artifactId>
                        <version>1.7.1</version>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>git</id>
                                <goals>
                                    <goal>tag-master</goal>
                                </goals>
                            </execution>
                        </executions>
                        <!--<configuration>-->
                        <!--<gitBranchExpression>${git-branch}</gitBranchExpression>-->
                        <!--</configuration>-->
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
